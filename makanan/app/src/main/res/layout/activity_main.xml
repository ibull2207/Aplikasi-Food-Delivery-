<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="273dp"
            android:background="@drawable/burger">

        </FrameLayout>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip5"
            android:layout_width="134dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:text="-  1  +"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Beef Burger"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="-50dp"
            android:text="$ 5.69"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:paddingLeft="10dp"
            android:text="Cheesy Mozarella" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="46dp"
            android:layout_height="37dp"
            app:srcCompat="@drawable/bintang"
            android:paddingTop="10dp"
            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4,8"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingLeft="50dp"
            android:layout_marginTop="-25dp"
            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="46dp"
            android:layout_height="37dp"
            app:srcCompat="@drawable/fire"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="-38dp"
            />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="150 Kcal"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="-25dp"
            />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="46dp"
            android:layout_height="37dp"
            app:srcCompat="@drawable/clock"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="-37dp"
            />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5-10 Min"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="-25dp"
            />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:text="This beef burger uses 100% quality beef with sliced tomotoes, cucumbers, vegetables and onions... Read more"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:paddingTop="20dp"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Add to cart"
            android:layout_gravity="center"
            />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>